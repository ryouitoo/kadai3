<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render partial: 'new',locals:{ book: @book, user: @user} %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>


            <tr>
              <td>
              <div>
                <a><%=link_to user_path(current_user.id) do %>
                <%= image_tag current_user.get_profile_image(100,100) %>
                <% end %>
                </a>
              </div>
              </td>
              <td>
                <a><%= link_to book_path(@books.id) do  %>
                  <%= @books.title %>
                  <% end %>
                  </a>
                </td>
              <td><%= @books.body %></td>
              <td><a class="btn btn-sm btn-sucess"><%= link_to "Edit",edit_book_path(@books.id) %></a></td>
              <td><%= link_to "Destroy",book_path(@books.id), method: :delete,"data-confirm" => "Are you sure?"%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>