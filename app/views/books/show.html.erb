<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render partial: 'new',locals:{ book: @book, user: @user} %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>


            <tr>
              <td>
              <div>
                <%=link_to user_path(@books.user.id) do %>
                <%= image_tag @books.user.get_profile_image(100,100) %>
                <%= @books.user.name %>
                <% end %>
              </div>
              </td>
              <td>
                  <%= link_to book_path(@books.id) do  %>
                  <%= @books.title %>
                  <% end %>
                </td>
              <td><%= @books.body %></td>
              <td>
                <% if @books.user == current_user %>
                <a class="btn btn-sm btn-sucess"><%= link_to "Edit",edit_book_path(@books.id) %>
                </a>
                <% end %>
                </td>

              <td>
                <% if @books.user == current_user %>
                <%= link_to "Destroy",book_path(@books.id), method: :delete,"data-confirm" => "Are you sure?"%>
                <% end %>
                </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>