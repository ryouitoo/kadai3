<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
         <%= form_with model: @user do |f| %>

        <div class="form-group">
          <label for ="user_name">Name</label>
          <%= f.text_field :name,autofocus: true, id:"inputName",placeholder: "Name" %>
        </div>

        <div class="form-group">
          <label for ="user_image">Image</label>
          <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_field :introduction,autofocus: true,placeholder: "introduction" %>
        </div>

        <div class="form-group">
        <%= f.submit"Update User" %>
        </div>

         <% end %>
      </div>
    </div>
  </div>
</main>