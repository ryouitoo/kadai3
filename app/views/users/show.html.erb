

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラー
  <ul>
   <% @book.errors.full_mesages.each do |mesage| %>
    <li><%= mesage %></li>
    <% end %>
  </ul>
  <% end %>


  <div>
    <%= flash[:notice] %>
  </div>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render partial: 'books/new',locals:{ book: @book, user: @user} %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>

            <% @books.each do |book| %>
            <tr>
              <td>
              <div>
                <%=link_to user_path(current_user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </div>
              </td>
              <td>
                <div>
                  <%= link_to book_path(book.id) do %>
                  <%=book.title %>
                  <% end %>
                  </div>
                  </td>
              <td><%=book.body %></td>


            </tr>
            <% end %>
          </tbody>


        </table>
      </div>

    </div>
  </div>
