<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/37e416a73c.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"> <span>Bookers</span> </a>
        <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expand="true" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
         <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
              <li>
               <i class="fa-solid fa-house"></i><!--家アイコン-->
               <%= link_to"Home", user_path(current_user.id) %>
              </li>
              <li>
               <i class="fa-solid fa-user"></i><!--ユーザーアイコン-->
               <%= link_to"Users",users_path %>
              </li>
              <li>
               <i class="fa-solid fa-book"></i><!--本アイコン-->
               <%= link_to"Books",books_path %>
              </li>
              <li>
               <i class="fa-solid fa-right-from-bracket"></i><!--ログアウト-->
               <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
           <% else %>
              <li>
               <i class="fa-light fa-house"></i><!--家アイコン-->
               <%= link_to "Home", root_path %>
              </li>
              <li>
               <i class="fa-solid fa-link"></i><!--チェーンアイコン-->
               <%= link_to"About", home_about_path %>
              </li>
              <li>
               <i class="fa-solid fa-user-plus"></i><!--サインアップ-->
               <%= link_to "Sign up", new_user_registration_path %>
              </li>
              <li>
               <i class="fa-solid fa-right-to-bracket"></i><!--ログインアイコン-->
               <%= link_to "Log in", new_user_session_path %>
              </li>
            <% end %>
           </ul>
          </div>
          </div>
      </nav>
  </header>


  <%= yield %>


  <footer>
    <div class="container mt-5">
      <div class="row">
      <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
       </div>
       </div>
       </div>
  </footer>
  </body>
</html>
