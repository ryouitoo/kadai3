<main>
  <P id="notice"></P>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
      <h2>User info</h2>

      <!--ユーザーアイコン-->
      <table class="table">
        <tbody>
          <tr></tr>
          <tr></tr>

        </tbody>
      </table>
      <%= render 'new',book: @book %>
      </div>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">

           <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
           </tr>
           </thead>

           <% @books.each do |book| %>

           <tbody>
            <tr>
             <td>
               <div>
                <%=link_to user_path(book.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </div>
             </td>
             <td>
               <div>
                 <%= link_to book_path(book.id) do %>
                 <%= book.book_name %>
                 <% end %>
               </div>
               </td>
             <td><%= book.caption %></td>
             <td></td>
            </tr>
           </tbody>
           <% end %>
          </table>
        </div>
        </div>
        </div>
